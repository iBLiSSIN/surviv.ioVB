{
    "name": "Surviv.io Cheat Injector",
    "version": "1.0.6",
    "description": "Provides an assortment of cheats for surviv.io",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "*://*/*",
        "webRequestBlocking",
        "tabs",
        "declarativeContent",
        "activeTab"
    ],
    "externally_connectable": {
        "matches": [
			      "*://*.surviv.io/*",
			      "*://*.ptr.surviv.io/*",
			      "*://*.surviv2.io/",
			      "*://*.2dbattleroyale.com/",
			      "*://*.2dbattleroyale.org/",
			      "*://*.piearesquared.info/",
			      "*://*.thecircleisclosing.com/",
			      "*://*.parmainitiative.com/",
			      "*://*.twitch.tv/popout/survivio/extensions/c79geyxwmp1zpas3qxbddzrtytffta/panel"
        ]
    },
    "icons": {
        "128": "./files/ice.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "files/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "*://*.surviv.io/*",
			          "*://*.ptr.surviv.io/*",
			          "*://*.surviv2.io/",
			          "*://*.2dbattleroyale.com/",
			          "*://*.2dbattleroyale.org/",
			          "*://*.piearesquared.info/",
			          "*://*.thecircleisclosing.com/",
			          "*://*.parmainitiative.com/",
			          "*://*.twitch.tv/popout/survivio/extensions/c79geyxwmp1zpas3qxbddzrtytffta/panel"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
